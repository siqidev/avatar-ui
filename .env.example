# --- LLM API Keys (use what you need) ---
# Gemini (Google GenAI): https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=
# GPT (OpenAI): https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Claude (Anthropic): https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# --- Server Settings ---
# Server Host & Port (Used by uvicorn in main.py)
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# --- Client Settings ---
# Port for the Vite dev server / Electron renderer
CLIENT_PORT=5173

# --- ログ設定 (Micro-task 4 追加分) ---
# dev: 詳細ログ出力（ボディの中身が見える）
# prod: 安全モード（ボディの中身を隠す・デフォルト）
APP_ENV=dev

# true: 強制的にボディログを出す（APP_ENVより優先）
LOG_BODY=true

# --- Electron / DevTools / 警告制御 ---
# APP_ENV に連動しつつ、個別に上書き可能
# OPEN_DEVTOOLS=true で強制表示 / false で強制非表示（未設定なら APP_ENV に従う）
OPEN_DEVTOOLS=
# ELECTRON_WARNINGS=true で警告表示を強制、false で非表示（未設定: devは表示, prodは非表示）
ELECTRON_WARNINGS=

# --- Agent (クライアントへ配布する接続情報の源) ---
AGENT_ID=spectra
THREAD_ID=thread

# --- セッション管理設定 (Micro-task 7 追加分) ---
# 会話セッションのタイムアウト時間（秒）。デフォルト: 1200 (20分)
SESSION_TIMEOUT_SECONDS=1200

# 古いセッションを掃除する間隔（秒）。デフォルト: 300 (5分)
CLEANUP_INTERVAL_SECONDS=300
